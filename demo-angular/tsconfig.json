{
   "compileOnSave": true,
   "compilerOptions": {
      "baseUrl": ".",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "lib": [
         "dom",
         "es2017",
         "es6"
      ],
      "module": "esnext",
      "moduleResolution": "node",
      "noEmitHelpers": true,
      "noEmitOnError": true,
      "paths": {
         "*": [
            "./node_modules/*"
         ],
         "~/*": [
            "app/*"
         ]
      },
      "target": "ES2017"
   },
   "exclude": [
      "../src/node_modules",
      "node_modules",
      "platforms"
   ],
   "include": [
      "**/*",
      "../src"
   ]
}
