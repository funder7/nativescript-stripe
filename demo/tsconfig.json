{
   "compileOnSave": true,
   "compilerOptions": {
      "module": "ESNext",
      "target": "ES2017",
      "moduleResolution": "Node",
      "baseUrl": ".",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "lib": [ "es2018", "es2017", "dom", "es6" ],
      "noEmitHelpers": true,
      "noEmitOnError": true,
      "paths": {
         "*": [
            "./node_modules/*"
         ],
         "~/*": [
            "src/app/*"
         ]
      },
      "skipLibCheck": true
   },
   "exclude": [
      "../src/node_modules",
      "node_modules",
      "platforms",
      "nativescript.config.ts"
   ],
   "include": [
      "**/*",
      "../src"
   ]
}
